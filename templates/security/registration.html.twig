{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'attr': {'placeholder': "Nom d'utilisateur"}}) }}
    <br>
    {{ form_row(form.email, {'attr': {'placeholder': 'Adresse Email'}}) }}
    <br>
    {{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
    <br>
    {{ form_row(form.confirm_password, {'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}

    <br>
    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}
{% endblock %}